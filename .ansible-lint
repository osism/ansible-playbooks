---
exclude_paths:
  - .cache
  - ../home/.cache
  - library
  - .github/
  - playbooks/generic/common.yml
mock_modules:
  - hashivault_secret
mock_roles:
  - squid
  - containerd
  - runc
use_default_rules: true
rulesdir:
  - ./.ansible-lint-rules/
skip_list:
  - fqcn-builtins
  - galaxy[no-changelog]
  - ignore-errors
  - schema
  - yaml
warn_list:
  - experimental  # all rules tagged as experimental
