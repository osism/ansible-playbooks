  - .cache
  - ../home/.cache
  - library
  - .github/
  - playbooks/generic/common.yml
mock_modules:
  - hashivault_secret
mock_roles:
  - squid
  - containerd
  - runc
use_default_rules: true
rulesdir:
  - ./.ansible-lint-rules/
skip_list:
  - ignore-errors
  - schema
  - yaml
  - fqcn-builtins
